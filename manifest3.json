{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Echo Popup",
  "description": "popup same word",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js": ["contentscript.js"],
    "css": ["tooltip.css"]
  }],
  "web_accessible_resources": ["translator.js", "tooltip.js", "data/*"],
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "<all_urls>",
    "webRequestBlocking",
    "file:///*/*",
    "storage"
  ],
  "browser_action": {
    "name": "Click to change the icon's color"
  }
}