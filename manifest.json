{
  "manifest_version": 2,
  "name": "Arabic Dictionary",
  "version": "3.5.0",
  "background": {
    "scripts": ["background.js"],
    "run_at": "document_start"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-s3W2BljdD1L78se7ZRc8LpiRGtOKDUndJ84/VgXmYiw=' https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.5/jszip.min.js; object-src 'self'",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js": ["contentscript.js"],
    "css": ["tooltip.css"]
  }],
  "description": "Chrome extension to format and translate selected text directly from PDF files with DeepL.",
  "icons": {
    "16": "img/translation_16.png",
    "48": "img/translation_48.png",
    "128": "img/translation_128.png"
  },
  "browser_action": {
    "name": "Click to change the icon's color"
  },
  "web_accessible_resources": ["translator.js", "tooltip.js", "data/*"],
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "<all_urls>",
    "webRequestBlocking",
    "file:///*/*",
    "storage"
  ]
}
